# Update these with your Supabase details from your project settings > API
# https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your-publishable-or-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Apify (Event Import from Facebook/Eventbrite)
# Sign up at: https://apify.com and get your API token from Settings > Integrations
APIFY_API_TOKEN=your-apify-api-token
# Optional: Secret for validating Apify webhook callbacks
APIFY_WEBHOOK_SECRET=your-webhook-secret

# Web Push (VAPID keys for push notifications)
# Generate new keys with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# OpenAI (Whisper) for voice transcription
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key

# Google AI (Gemini) for flyer generation
# Get your API key from: https://aistudio.google.com/apikey
GOOGLE_AI_API_KEY=your-gemini-api-key

# Google Cloud Translation API
# Enable at: https://console.cloud.google.com/apis/library/translate.googleapis.com
# Create key at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLOUD_TRANSLATION_API_KEY=your-translation-api-key

# Anthropic Claude (Text Enhancement)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key

# Replicate (CLIP Embeddings for Visual Search)
# Get your API token from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=your-replicate-api-token

# Cloudflare (Image Resizing, R2 Storage, Stream)
# Get credentials from: https://dash.cloudflare.com/ > Account > R2 > Manage API Tokens
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id

# Cloudflare Stream (Video hosting)
CLOUDFLARE_STREAM_API_TOKEN=your-stream-api-token
CLOUDFLARE_STREAM_WEBHOOK_SECRET=your-webhook-secret

# Cloudflare R2 (Object Storage - faster than Supabase Storage)
# Create bucket at: https://dash.cloudflare.com/ > R2 > Create bucket
# Create API token at: R2 > Manage API Tokens > Create API Token
CLOUDFLARE_R2_ACCESS_KEY_ID=your-r2-access-key-id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
CLOUDFLARE_R2_PUBLIC_URL=https://cdn.dalat.app
CLOUDFLARE_R2_BUCKET_NAME=dalat-app-media
